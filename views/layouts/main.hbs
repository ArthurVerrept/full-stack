    {{else}}
    <nav class="nav-container">
    <div onclick='append()' class="hamburger" type="button">
        <div class="burger-line top"></div>
        <div class="burger-line mid"></div>
        <div class="burger-line bot"></div>
    </div>
        <ul class="nav-ul">
            <li class="nav-li logo">
