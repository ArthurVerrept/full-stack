    <script>
        document.querySelector('.nav-li.logo').addEventListener('mouseover', function(){
            document.querySelector('.fraiment-underline').style.width = '92px';
        });

        document.querySelector('.nav-li.logo').addEventListener('mouseout', function(){
            document.querySelector('.fraiment-underline').style.width = '0px';
        });

        if(document.querySelector('.login-error p') != null){
            setTimeout(function(){document.querySelector('.login-error p').style.display = 'none'}, 2500)
        }       

        function append(){
            if(!document.querySelector('.is-active')){
                document.querySelector('.hamburger').classList.add('is-active')   
                document.querySelector('.nav-li.right').style.display = 'block'
    
            }else{
                document.querySelector('.hamburger').classList.remove('is-active')   
                document.querySelector('.nav-li.right').style.display = 'none'
            } 
        }
    </script>
